    link(href="/css/style.css", rel="stylesheet", type="text/css")
  body
    #main
      // Main Container
      // Page Contents
      #content.main.animated.fadein
        .autoflow
          // Shop banner
            
          // Gallery
          .grid.m-t-20.animated.fadeinup.delay-2
            each product, i in products
              .grid-item.gallery-item-card
                a.catalogue_placeholder.no-smoothState(onclick="getID(this)" id= product._id)
                  
                  img#catalogue(src= product.slideshow[0])
                  |                 
                  .gallery-item-header
                    .gallery-item-author
                      span#product-title #{product.title}
                      |                     
                      span#product-price.small KSh #{product.price}
              |                       
            // End Gallery
        |       
        .clr
        // Footer
        footer.page-footer.primary-color
          .container
            .row
              .col.s12
                p.center-align.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.
                |               
                .center-align
                  i.ion-social-facebook.m-10.white-text
                  |                 
                  i.ion-social-twitter.m-10.white-text
                  |                 
                  i.ion-social-pinterest.m-10.white-text
                  |                 
                  i.ion-social-dribbble.m-10.white-text
          |         
          .line.white
          |         
          .footer-copyright.primary-color
            .container
              | 2016 Codnauts
              a.grey-text.text-lighten-4.right(href="#!") Privacy Policy
      // End of Page Contents
      // Menu Trigger
      .menu-trigger.z-depth-2
        #menu-icon
          span
          |         
          span
          |         
          span
          |         
          span
      // Menu
      nav#menu.menu
        .menu-navigation
          ul.full-menu.collapsible
            li.menu-title Eclipse
            |                       
            li
              a.no-child(href="shop.html") Shop
            |           
            li
              a.no-child(href="news.html") News
            |           
            li
              a.no-child(href="video.html") Video
            |           
            li
              a.no-child(href="contact.html") Contact
      // End of Menu
    // End of Main Container
    script(src="/js/jquery-1.12.2.js")
    |   
    script(src="/js/modernizr.js")
    |   
