doctype html
html(lang="en-US")
  head
    meta(charset="utf-8")
    |   
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    |   
    title Home - Warehouse
    |   
    meta(content="IE=edge", http-equiv="x-ua-compatible")
    |   
    meta(content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no", name="viewport")
    |   
    meta(content="yes", name="apple-mobile-web-app-capable")
    |   
    meta(content="yes", name="apple-touch-fullscreen")
    // Fonts
    link(href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600", rel="stylesheet")
    |   
    link(href="https://fonts.googleapis.com/css?family=Raleway:300,400,700", rel="stylesheet", type="text/css")
    // Icons
    link(href="/css/ionicons.css", rel="stylesheet", type="text/css")      
    // Styles
    link(href="/css/keyframes.css", rel="stylesheet", type="text/css")
    |   
    link(href="/css/materialize.min.css", rel="stylesheet", type="text/css")
    |   
    link(href="/css/swiper.css", rel="stylesheet", type="text/css")
    |   
    link(href="/css/slick.css", rel="stylesheet", type="text/css")
    |   
    link(href="/css/slick-theme.css", rel="stylesheet", type="text/css")
    |   
    link(href="/css/swipebox.min.css", rel="stylesheet", type="text/css")
    |       
    link(href="/css/style.css", rel="stylesheet", type="text/css")    
    |
    script(src="/js/siema.min.js")
  body
    #main
      // Main Container
      // Page Contents
      #content.main.animated.fadein
        img#home-logo.right(src= "img/warehouse-plain-black.png")
        h3#home-title Warehouse
        p#home-text Discover a new way to shop for sneakers.
        img#poster(src= "http://res.cloudinary.com/dzxuz9zc9/image/upload/f_auto,q_auto:good/v1506956257/Shoe_empire/Adidas_poster__black_v0.jpg")
          
        h3#home-title-1 Featured
        // Gallery
        #home-grid.animated.fadeinup.delay-2
          each product, i in products
            .grid-item.gallery-item-card(onclick="getID(this)" id= product._id)                  
                img.lazy#catalogue(data-src= product.slideshow[0])
                |     
                #shoe-shadow            
                .gallery-item-header
                  .gallery-item-author
                    span#product-title #{product.title}
                    span#product-price.small KSh &#8226; #{product.price}
                  // End Gallery
                |                    
        .clr
      // Footer
      footer.page-footer.white#footer
        .container
          .row
            .col.s12
              p#footer-text.center-align.text-lighten-4 We believe online shopping should be simple and a little fun.
              |                 
              .center-align
                a(target="_blank" href="https://www.facebook.com/warehouseafrica/")
                  i.ion-social-facebook.m-10.black-text
                |                   
                a(target="_blank" href="https://www.instagram.com/warehouse.africa/")
                  i.ion-social-instagram-outline.m-10.black-text
        .footer-copyright.white
          .container
            img#footer-logo.left(src= "img/warehouse-plain-black.png")
            #footer-text-1.left Warehouse Africa.
            // <a class="grey-text text-lighten-4 right" href="#!">Privacy Policy</a>
            // End of Page Contents
            // Menu Trigger
            .menu-trigger
              #menu-icon
                span
                |         
                span
                |         
                span
                |         
                span
            // Menu
            nav#menu.menu
              .menu-navigation
                ul.full-menu.collapsible
                  img#nav_logo(src="/img/warehouse_full_black.png")
                  |                       
                  hr#nav_divider
                  |
                  li
                    a.no-child(onclick="homeRedirect()" href="/") Home
                  |           
                  li
                    a.no-child(onclick="featuredRedirect()" href="/featured") Partners          
                  |           
                  li
                    a.no-child(onclick="contactRedirect()" href="/contact") Contact
            // End of Menu
            // End of Main Container

