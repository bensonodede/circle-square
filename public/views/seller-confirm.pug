  body
    #main
      // Main Container
      // Confirm Modal Structure
      #modal1.modal
        .modal-content
          h5 This item is ready for pickup.
          |           
          h5 Are you sure?
        |         
        .modal-footer
          a.modal-action.waves-effect.btn-flat(href="#!", onclick="done()") Yes
          |           
          a.modal-action.modal-close.waves-effect.btn-flat(href="#!") Cancel
      // Not available Modal Structure
      #modal2.modal
        .modal-content
          h5 This item is currently not available in your store.
          |           
          strong
            h5 Are you sure?
        |         
        .modal-footer
          a.modal-action.waves-effect.btn-flat(href="#!") Yes
          |           
          a.modal-action.modal-close.waves-effect.btn-flat(href="#!") Cancel
      // Page Contents
      #content.main.animated.fadein
        // Hero Header
        #first.hero-header.animated.fadein
          // Slider
          #carousel.carousel
            each slideshow, i in slideshows
              .item
                .imageContainer
                  img#slideshowImg(src= slideshow)
          // End of Slider
        |         
        #product-details
          // Product Title
          .center-align.p-20            
            h3.item_name.m-0
              strong #{details.title}
            |           
            h4.item_price KSh. #{total}
          |         
          .product-variation
            h5
              strong Requested size:
            |           
            .sizes.p-b-20
              #sizes
                span.size#confirmSize #{size}

        // Prduct Description
        #confirm-description.product-description
          p
          |           
          h5 Please confirm that this item is available and ready for pickup.
        //
          <div class="product-variation">
          <h5><strong>Choose a color:</strong></h5>
          <form action="#">
          <p>
          <input name="group1" type="radio" id="test1" />
          <label for="test1">Red</label>
          </p>
          <p>
          <input name="group1" type="radio" id="test2" />
          <label for="test2">Yellow</label>
          </p>
